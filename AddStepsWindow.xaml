<Window x:Class="RecipeManagerWPF.AddStepsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagerWPF"
        mc:Ignorable="d"
        Title="Add Steps" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter each step (one step per line):"/>
            <TextBox x:Name="StepsTextBox" AcceptsReturn="True" Height="200"/>
            <Button Content="Add Steps" Click="AddSteps_Click"/>
        </StackPanel>
    </Grid>
</Window>
