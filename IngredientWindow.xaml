<Window x:Class="RecipeManagerWPF.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagerWPF"
        mc:Ignorable="d"
        Title="Add Ingredient" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ingredient Name:"/>
            <TextBox x:Name="IngredientNameTextBox"/>
            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="QuantityTextBox"/>
            <TextBlock Text="Unit of measurement"/>
            <TextBox x:Name="UnitTextBox"/>
            <TextBlock Text="Calories:"/>
            <TextBox x:Name="CaloriesTextBox"/>
            <TextBlock Text="Food Group"/>
            <TextBox x:Name="FoodGroupTextBox"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click"/>
        </StackPanel>
    </Grid>
</Window>
